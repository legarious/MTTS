    //Sample login
    <script>
      $('#login').on('click', function() {
          
          if ($('#login-username').val() === 'admin') {
              window.location = './admin.html';
          } else if ($('#login-username').val() === 'staff') {
              window.location = './staff.html';
          } else if ($('#login-username').val() === 'guard') {
              window.location = './GuardAuthentication.html';
          } else{
              alert("Your Username or Password is wrong..");
          }
          
      })
     $('#forgot').on('click',function(){
         alert('Your admin has been inform of your problem.\nBe patience.');
     })    
    </script>